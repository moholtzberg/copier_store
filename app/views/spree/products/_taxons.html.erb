<% if !@product.taxons.blank? %>
	<div id="taxon-crumbs" data-hook>
		
		<div class="product-section-title"><%= Spree.t(:look_for_similar_items) %></div>
		
		<h4 data-hook="product_taxons">
			<% @product.taxons.each do |taxon| %>
			<%= link_to taxon.name, seo_url(taxon), :class => "label label-default" %>
			<% end %>
		</h4>
		
	</div>
<% end %>